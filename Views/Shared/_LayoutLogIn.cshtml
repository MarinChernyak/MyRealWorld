<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyRealWorld</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/LogIn.css" />
    <script src="https://kit.fontawesome.com/945d346062.js" crossorigin="anonymous"></script>
    
</head>
<body>
    <header >
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid bg-dark">
                <div class="col-9">
                    <div class="col-11">
                        <a class="navbar-brand welcome_label" asp-area="" asp-controller="Home" asp-action="Index"><span class="welcome_label">Welcome to login into my real world...</span></a>
                    </div>
                </div>
                <div class="col-1">
                    <div class="navbar-collapse collapse " >
                        @Html.ActionLink(" ", "Index", "Home", new { @class = "fa-solid fa-home fa-2xl gohome" })
                    </div>
                </div>

            </div>
        </nav>
    </header>
    <div class="Main" style="width:100%;">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - MyRealWorld - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
     @section scripts {
        <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        
    }
    @await RenderSectionAsync("Scripts", required: false)
    
</body>
</html>
