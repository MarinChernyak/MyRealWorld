
@{
    ViewData["Title"] = "Registration Form";
    Layout = "~/Views/Shared/_LayoutMain2.cshtml";
    // @using SMAuthentication.Models.Geo
}
@model SMAuthentication.Authentication.RegistrationModel
<link rel="stylesheet" href="~/css/LogIn.css" />

@using (Html.BeginForm("Registration", "LogIn", FormMethod.Post))
{
     <section class="bg-dark ">
        <div class="container">
            <div class="col-md-10 form-group">
                <label class="text-danger">@Model.ErrMessage</label>
            </div>
            <fieldset>
                <legend class="legend ml-lg-4">Registration Form</legend>
                <div class="mb-3">
                    <label for="UserName" class="form-label labels_of_controls">User Name</label>
                    <input asp-for="UserName" type="text" class="form-control midium_txt" id="txtUserjName" placeholder="UserName is required">
                </div>
                <div class="mb-3">
                    <label for="UserName" class="form-label labels_of_controls">Password</label>
                    <input asp-for="Password" type="password" class="form-control midium_txt" id="txtPassword">
                </div>
                <div class="mb-3">
                    <label for="UserName" class="form-label labels_of_controls">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control midium_txt" id="txtPassword">
                </div>
                <div class="mb-3">
                    <label for="Email" class="form-label labels_of_controls">Email</label>
                    <input asp-for="Email" type="email" class="form-control midium_txt" id="txtEmail">
                </div>
                <div class="col-md-3 form-group align-items-center mt-lg-3">
                    <button type="submit" class="btn btn-outline-warning">Register</button>
                </div>
            </fieldset>
        </div>
    </section>



}
